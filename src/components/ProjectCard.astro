---
import TagPill from './TagPill.astro';

const { project } = Astro.props;
const { data } = project;
---
<article class="surface p-6 flex flex-col gap-4">
  <div>
    <h3 class="text-xl font-semibold text-base-950 dark:text-base-50">{data.title}</h3>
    <p class="mt-2 text-sm text-base-600 dark:text-base-300">{data.summary}</p>
  </div>
  <div class="flex flex-wrap gap-2">
    {data.tags.map((tag) => (
      <TagPill label={tag} />
    ))}
  </div>
  {data.links ? (
    <div class="flex flex-wrap gap-4 text-sm">
      {data.links.github ? (
        <a href={data.links.github} class="hover:text-accent">GitHub →</a>
      ) : null}
      {data.links.demo ? (
        <a href={data.links.demo} class="hover:text-accent">Live demo →</a>
      ) : null}
    </div>
  ) : null}
</article>
